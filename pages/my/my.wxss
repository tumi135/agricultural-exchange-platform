/* pages/my/my.wxss */
page {
    background-color: #f2f2f2;
}
.my-info {
  padding: 32rpx 36rpx;
  background: #ffffff;
}
.my-comment {
  height: 70rpx;
  text-align: right;
}

.van-icon-comment-o {
  font-size: 38rpx;
}

.my-comment .van-info {
  /* width: 18rpx;
  height: 18rpx; */
  top:0;
}

.user-info{
  display: flex;
  align-items: center;
}
.avator{
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  overflow: hidden;
  margin-right: 40rpx;
}
.avator-img{
  width: 100%;
  height: 100%;
}
.info-right{
  flex: 1;
}
.user-name{
  display: block;
  font-size: 38rpx;
  font-weight: 600;
}
.user-account{
  margin-top: 12rpx;
  display: block;
  font-size: 28rpx;
  color: #979797;
}
.list{
  margin-top: 28rpx;
  background: #ffffff;
  padding: 0 30rpx;
}
.list-item{
  display: block;
  padding: 14rpx;
  color: #979797;
  font-size: 32rpx;
  background: #ffffff;
  border: none;
  outline: none;
  text-align: left;
}
button::after{
  width: 0;
  height: 0;
}
.hairline--bottom{
  border-bottom: 1px solid #EDEDED;
}
.set-up{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 14rpx 30rpx;
  color: #979797;
  font-size: 32rpx;
  margin-top: 28rpx;
  background: #ffffff;
}
.footer{
  margin-top: 90rpx;
  text-align: center;
  color: #979797;
  font-size: 32rpx;
}
.footer-item{
  display: block;
}