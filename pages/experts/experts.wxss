/* pages/experts/experts.wxss */

.experts {
  padding: 20rpx 30rpx 168rpx 30rpx;
}

.wszl {
  font-size: 42rpx;
  font-weight: 600;
}

.input-item {
  border-bottom: 1px solid #ededed;
  display: flex;
  align-items: center;
  height: 80rpx;
  line-height: 80rpx;
}

.label {
  font-size: 30rpx;
}

.input {
  flex: 1;
  margin-left: 32rpx;
  border: none;
  outline: none;
  font-size: 30rpx;
}

.input-placeholder {
  font-size: 30rpx;
}
.carded{
  margin-top: 30rpx;
}
.carded-box{
  margin: 30rpx 0rpx;
}

.carded-one {
  display: inline-block;
  position: relative;
  width: 330rpx;
  height: 207rpx;
  background: #f2f2f2;
}
.carded-one01{
  margin-right: 30rpx;
}
.bg {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.bg>image {
  margin-bottom: 30rpx;
  width: 90rpx;
  height: 66rpx;
}

.bg>text {
  font-size: 26rpx;
  color: #7d7e80;
}

.carded-item {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #ffffff;
  border: 1px solid #ededed;
}
.carded-item>image{
  width: 100%;
  height: 100%;
}
.send-button{
  border: none;
  outline: none;
  background: #0391FF;
  font-size: 28rpx;
  color: #ffffff;
  margin-top: 30rpx;
}
.experts .van-toast__text{
  text-align: center;
}
